set nocompatible

syntax enable
filetype plugin on

set path+=**

set wildmenu
set wildmode=longest:list,full
set laststatus=2

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent
set smartindent
set backspace=2
set mouse=a

set t_Co=256
set number
colorscheme desert

set incsearch
set hlsearch
set ignorecase
set smartcase

